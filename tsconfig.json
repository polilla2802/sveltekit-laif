{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"types": ["svelte", "node"],
		"target": "es2018",
		"module": "esnext",
		"lib": [
			"esnext",
			"dom"
		],
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.svelte"
	],
	"exclude": [
		"node_modules"
	]
}